<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title: 'Home' }) %>

    <body class="home">
        <%- include('partials/header') %>
            <p class="cart_detail"><a href="/">home</a> <i class="fa-solid fa-chevron-right"></i> <a href="#">admin</a>
            </p>

            <main class="container">
                <div class="row mt-5 mb-5">
                    <div class="col-12 col-md-12 col-lg-10 mx-auto">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title text-center mt-2 mb-2">Vida Orgánica - Admin</h4>
                            </div>
                            <div class="card-body">
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="home-tab" data-bs-toggle="tab"
                                            data-bs-target="#home-tab-pane" type="button" role="tab"
                                            aria-controls="home-tab-pane" aria-selected="true">Productos</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="users-tab" data-bs-toggle="tab"
                                            data-bs-target="#users-tab-pane" type="button" role="tab"
                                            aria-controls="users-tab-pane" aria-selected="false">Usuarios</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="category-tab" data-bs-toggle="tab"
                                            data-bs-target="#category-tab-pane" type="button" role="tab"
                                            aria-controls="category-tab-pane" aria-selected="false">Categorías</button>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel"
                                        aria-labelledby="home-tab" tabindex="0">

                                        <div class="d-flex flex-column gap-2 flex-md-row justify-content-between my-3">
                                            <a href="/products/add" class="btn btn-success"><i
                                                    class="fa-solid fa-plus"></i>Agregar</a>
                                        </div>

                                        <table class="table table-hover">

                                            <!-- TABLA -->

                                            <!-- PRODUCTOS SEGÚN : -->
                                            <thead>
                                                <tr>
                                                    <th scope="col">#</th>
                                                    <th scope="col">Nombre</th>
                                                    <th scope="col">Marca</th>
                                                    <th scope="col">Descripción</th>
                                                    <th scope="col">Categoría</th>
                                                    <th scope="col">Precio</th>
                                                    <th scope="col">P. Final</th>
                                                    <th scope="col">Acciones</th>
                                                </tr>
                                            </thead>

                                            <!-- PRODUCTOS DEL JSON -->

                                            <tbody>
                                                <% products.forEach(({id, Brand, description, Category, file, Product},
                                                    index)=> { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= index + 1 %>
                                                        </th>
                                                        <td>
                                                            <%= Product.name %>
                                                        </td>
                                                        <td>
                                                            <%= Product.Brand.name ? Product.Brand.name : "-" %>
                                                        </td>
                                                        <td>
                                                            <%= Product.description %>
                                                        </td>
                                                        <td>
                                                            <%= Product.Category.name %>
                                                        </td>
                                                        <td>
                                                            <%= Product.price %>
                                                        </td>
                                                        <td>
                                                            <%= Product.price - (Product.discount * Product.price / 100)
                                                                %>
                                                        </td>
                                                        <td>
                                                            <div class="d-flex gap-2">

                                                                <button type="button" class="btn btn-sm btn-primary"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#modalDetail<%= Product.id %>">
                                                                    <i class="fas fa-eye"></i>
                                                                </button>
                                                                <div class="modal fade"
                                                                    id="modalDetail<%= Product.id %>" tabindex="-1"
                                                                    aria-labelledby="modalDetailLabel"
                                                                    aria-hidden="true">
                                                                    <div class="modal-dialog modal-dialog-centered">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h1 class="modal-title fs-2"
                                                                                    id="modalDetailLabel">
                                                                                    <%= Product.name %>
                                                                                </h1>
                                                                                <button type="button" class="btn-close"
                                                                                    data-bs-dismiss="modal"
                                                                                    aria-label="Close"></button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <div class="row">
                                                                                    <div class="col-12 col-md-4">
                                                                                        <img src="/images/img-products/<%= file %>"
                                                                                            class="img-fluid" alt="">
                                                                                    </div>
                                                                                    <div class="col-12 col-md-8">
                                                                                        <h2>$ <%= Product.price -
                                                                                                (Product.discount *
                                                                                                Product.price / 100) %>
                                                                                        </h2>
                                                                                        <p>
                                                                                            <%= Product.description %>
                                                                                        </p>
                                                                                        <button type="button"
                                                                                            class="btn btn-dark disabled">Comprar</button>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <a href="/products/edit/<%= Product.id %>"
                                                                    class="btn btn-sm btn-success">
                                                                    <i class="fa-regular fa-pen-to-square"></i>
                                                                </a>

                                                                <button type="button" class="btn btn-sm btn-danger"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#modalDelete<%= Product.id %>">
                                                                    <i class="fa-solid fa-trash"></i>
                                                                </button>
                                                                <div class="modal fade"
                                                                    id="modalDelete<%= Product.id %>" tabindex="-1"
                                                                    aria-labelledby="modalDeleteLabel"
                                                                    aria-hidden="true">
                                                                    <div class="modal-dialog modal-dialog-centered">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h1 class="modal-title fs-5"
                                                                                    id="modalDeleteLabel">Advertencia
                                                                                </h1>
                                                                                <button type="button" class="btn-close"
                                                                                    data-bs-dismiss="modal"
                                                                                    aria-label="Close"></button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <p>¿Estás seguro que querés eliminar el
                                                                                    producto <b>"<%= Product.name %>
                                                                                            "</b> ?</p>
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="button"
                                                                                    class="btn btn-secondary"
                                                                                    data-bs-dismiss="modal">Cancelar</button>
                                                                                <form
                                                                                    action="/products/remove/<%= Product.id %>?_method=DELETE"
                                                                                    method="POST">
                                                                                    <button type="submit"
                                                                                        class="btn btn-danger">Eliminalo!!!</button>
                                                                                </form>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <%}) %>
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="tab-pane fade" id="users-tab-pane" role="tabpanel"
                                        aria-labelledby="users-tab" tabindex="0">

                                        <div>
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Nombre</th>
                                                        <th scope="col">Apellido</th>
                                                        <th scope="col">Email</th>
                                                        <th scope="col">Rol</th>
                                                        <th scope="col">Acciones</th>
                                                    </tr>
                                                </thead>
                                               
                                                <tbody>
                                                <% adminUser.forEach(({ id, name, surname, email, rol, image, Role }, index) => { %>
                                                    <form method="POST" action="/admin/change-role/<%= id %>">
                                                        <tr>
                                                            <th scope="row">
                                                                <%= index + 1 %>
                                                            </th>
                                                            <td>
                                                                <%= name %>
                                                            </td>
                                                            <td>
                                                                <%= surname %>
                                                            </td>
                                                            <td>
                                                                <%= email %>
                                                            </td>
                                                            <td>
                                                                <%= Role.name %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex gap-2">                                                                  
                                                                    <select name="newRole" class="form-select form-select-sm" aria-label="Cambiar Rol">
                                                                        <option value="user" <%= rol === 'user' ? 'selected' : '' %>>Usuario</option>
                                                                        <option value="admin" <%= rol === 'admin' ? 'selected' : '' %>>Administrador</option>
                                                                    </select>
                                                                    <button type="submit" class="btn btn-success btn-sm">Cambiar Rol</button>                                                                  
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </form>
                                                <% }) %>
                                            </tbody>
   
                                            </table>
                                        </div>

                                    </div>

                                    <div class="tab-pane fade" id="category-tab-pane" role="tabpanel"
                                        aria-labelledby="category-tab" tabindex="0">


                                        <div>
                                            <table class="table table-hover">
                                                <div
                                                    class="d-flex flex-column gap-2 flex-md-row justify-content-between my-3">
                                                    <!-- Button trigger modal -->
                                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                        data-bs-target="#exampleModal">
                                                        <i class="fa-solid fa-plus"></i> Agregar
                                                    </button>

                                                    <!-- Modal -->
                                                    <form action="" method="POST">
                                                        <div class="modal fade" id="exampleModal" tabindex="-1"
                                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog modal-dialog-centered">
                                                                <div class="modal-content">

                                                                    <div class="modal-header">
                                                                        <h1 class="modal-title fs-5"
                                                                            id="exampleModalLabel">
                                                                            Agrega una nueva categoria</h1>
                                                                        <button type="button" class="btn-close"
                                                                            data-bs-dismiss="modal"
                                                                            aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        <div class="container_input-add">
                                                                            <div class="input-add">
                                                                                <label for="category">Categoría</label>
                                                                                <input type="text" id="category"
                                                                                    name="category"></input>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                    <div class="modal-footer">

                                                                        <button type="reset"
                                                                            class="btn btn-danger">Cancelar</button>


                                                                        <button type="submit"
                                                                            class="btn btn-primary">Guardar</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Nombre de la categoría</th>
                                                        <th scope="col">Acciones</th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <% categories.forEach(({id, name}, index)=> { %>
                                                        <tr>
                                                            <th scope="row">
                                                                <%= index + 1 %>
                                                            </th>
                                                            <td>
                                                                <%= name %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex gap-2">
                                                                    <button type="button" class="btn btn-sm btn-danger"
                                                                        data-bs-toggle="modal"
                                                                        data-bs-target="#modalDelete<%= id %>">
                                                                        <i class="fa-solid fa-trash"></i>
                                                                    </button>
                                                                    <button type="button" class="btn btn-sm btn-warning" 
                                                                        onclick="editCategory(<%= categories.id %>)">
                                                                        <i class="fa-solid fa-pencil"></i> Actualizar
                                                                    </button>
                                                                    <button type="button" class="btn btn-sm btn-info" 
                                                                        onclick="editCategory(<%= id %>)">
                                                                        <i class="fa-solid fa-pencil"></i> Editar
                                                                    </button>

                                                                    <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" 
                                                                        data-bs-target="#modalProducts<%= categories.id %>">
                                                                        <i class="fas fa-eye"></i> Ver Productos
                                                                    </button>
                                                                    
                                                                    <!-- Modal para mostrar productos -->
                                                                    <div class="modal fade" id="modalProducts<%= categories.id %>" tabindex="-1" aria-labelledby="modalProductsLabel" aria-hidden="true">
                                                                        <div class="modal-dialog modal-dialog-centered">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h1 class="modal-title fs-2" id="modalProductsLabel">
                                                                                        Productos de <%= categories.name %>
                                                                                    </h1>
                                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <!-- Aquí puedes mostrar la lista de productos de la categoría -->
                                                                                    <!-- Puedes usar un bucle para recorrer los productos y mostrar la información -->
                                                                                    <% categories.forEach(product => { %>
                                                                                        <p><%= product.name %></p>
                                                                                        <!-- Agrega más detalles según sea necesario -->
                                                                                    <% }) %>
                                                                                </div>
                                                                                <div class="modal-footer">

                                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>


                                                                    <div class="modal fade" id="modalDelete<%= id %>"
                                                                        tabindex="-1" aria-labelledby="modalDeleteLabel"
                                                                        aria-hidden="true">
                                                                        <div class="modal-dialog modal-dialog-centered">
                                                                            <div class="modal-content">
                                                                                <div class="modal-header">
                                                                                    <h1 class="modal-title fs-5"
                                                                                        id="modalDeleteLabel">
                                                                                        Advertencia
                                                                                    </h1>
                                                                                    <button type="button"
                                                                                        class="btn-close"
                                                                                        data-bs-dismiss="modal"
                                                                                        aria-label="Close"></button>
                                                                                </div>
                                                                                <div class="modal-body">
                                                                                    <p>¿Estás seguro que querés eliminar
                                                                                        el producto <b>"<%= name %>
                                                                                                "</b> ?</p>
                                                                                </div>
                                                                                <div class="modal-footer">
                                                                                    <button type="reset"
                                                                                        class="btn btn-secondary"
                                                                                        data-bs-dismiss="modal">Cancelar</button>
                                                                                    <form
                                                                                        action="/products/remove/<%= id %>?_method=DELETE"
                                                                                        method="POST">
                                                                                        <button type="submit"
                                                                                            class="btn btn-danger">Eliminar</button>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                            </td>
                                                        </tr>
                                                        <%}) %>
                                                </tbody>
                                            </table>

                                        </div>

                                        <div>
                                            <form action="#" method="GET" class="d-flex gap-2 my-3">
                                                <input type="text" class="form-control"
                                                    placeholder="Intentar hacer lo mismo que productos" name="keywords">
                                                <button type="submit" class="btn btn-outline-success">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('partials/footer') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
                    crossorigin="anonymous">
                    </script>
                    
    </body>

</html>