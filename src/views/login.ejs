<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title: 'Login' }) %>

    <body>

        <%- include('partials/header') %>

        <main>

            <!-- CABECERA  -->
            
            <h3 class="title-login">Iniciar sesion</h3>

            <!-- FORMULARIO -->

            <section class="formulario-register">            
                <div class="inputs">
                    <p>Los campos con (*) son obligatorios</p>
                    <form class="formu" method="">
                        <div class="espacio">
                            <label for="email">E-mail<p>*</p></label>
                            <input type="email" id="email" name="email" placeholder="Ej: mariaperez@mercadoliebre.com">
                        </div>
                        <div class="espacio">
                            <label for="password">Contraseña<p>*</p></label>
                            <input type="password" id="password" name="password" required>
                        </div>
                    </form>
                </div>
                <p><a href="/users/register" class="boton_formulario">¿No Tienes Cuenta, Registrate Aqui?</a></p>
                <a href="/" class="link-register"><button type="submit" class="btn-submit">INICIAR SESION</button></a> 
            </section>
        </main>

            <%- include('partials/footer') %>

    </body>

</html>