    <body>

        <%- include('partials/header') %>
            <main>
                <div class="container_form-edit">
                    <h2 class="title_form-edit">Editar producto</h2>
                    <form class="row g-3" action="/products/update/<%= id %>?_method=PUT"  method="POST">
                        <div class="col-md-6">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="name" id="name" value="<%= name %>">
                        </div>
                        <div class="col-md-6">
                            <label for="inputBrand" class="form-label">Marca</label>
                            <select name="brand">
                                <% brands.forEach(item => { %>
                                    <option <%= item.name === brand && 'selected' %> value="<%= item.name %>"><%= item.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="input-add">
                            <label for="category">Categoría</label>
                            <select type="text" name="category" id="category">
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.name %>"><%= category.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="inputPrice" class="form-label">Precio</label>
                            <input type="number" class="form-control" name="price" id="inputPrice" placeholder="$" value="<%= price %>">
                        </div>
                        <div class="col-md-6">
                            <label for="inputDiscount" class="form-label">Descuento</label>
                            <input type="number" class="form-control" name="discount" id="inputDiscount" value="<%= discount %>">
                        </div>
                        <div class="col-md-12">
                            <label for="description" class="container_description-edit">Descripción</label>
                            <textarea id="description" placeholder="Descripción a editar" name="description"><%= description %></textarea>
                        </div>
                        <div class="mb-3">
                            <label for = "image" class="form-label">Agregar imagen</label>
                            <input class="form-control" type="file" id="image" name="image">
                        </div>
                        <div class="col-sm-6">
                            <label for="inputStock" class="form-label">Stock</label>
                            <select id="inputStock" class="form-select">
                                <option selected>SI</option>
                                <option>NO</option>
                            </select>
                        </div>
                        <div class="col-sm-6">
                            <label for="image" class="btn btn-success button_imagen">Agregar imagen</label>
                            <input hidden class="form-control" type="file" id="image">
                        </div>
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-primary">Finalizar</button>
                        </div>
                        <div class="col-sm-3">
                            <button type="reset" class="btn btn-secondary">Cancelar</button>
                        </div>
                    </form>
                </div>

            </main>
